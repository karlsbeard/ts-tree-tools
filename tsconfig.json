{
  "compilerOptions": {
    "target": "ES2018",
    "jsx": "preserve",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ESNext",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
